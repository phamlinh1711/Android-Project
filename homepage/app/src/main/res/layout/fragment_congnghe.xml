<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".congnghe">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_vnpt"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="VNPT và Viettel mở rộng dung lượng để đáp ứng nhu cầu học tập trực tuyến"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_cccc"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Entrust hợp tác MK Group trong dự án cung cấp 50 triệu thẻ CCCD gắn chip"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_iphne"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="iPhone 13, MacBook Pro mới bị lùi lịch giao hàng sang tháng 12"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_mu"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="MU ngược dòng cảm xúc: Những khoảnh khắc của Ronaldo"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_psg"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="'Song sát' Messi - Mbappe giúp PSG thắng kịch tính Leipzig"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:src="@drawable/img_ase"
                android:layout_marginLeft="28dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Arsenal xuất sắc đè bẹp Aston Villa"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>