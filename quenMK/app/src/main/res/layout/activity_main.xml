<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/viewActionBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/imgRegisterBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"
            android:padding="0dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="406dp"
        android:layout_height="51dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="100dp"
        android:text="Một liên kết xác thực sẽ gửi đến thư Email của bạn"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="20dp"
        >
    </TextView>

    <EditText
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/border_edt"
        android:hint="Nhập Email"
        android:padding="10dp">

    </EditText>

    <Button
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/border_btn"
        android:backgroundTint="@color/colorPrimary"
        android:text="Gửi xác nhận"
        app:backgroundTint="@color/colorPrimary">

    </Button>















</RelativeLayout>